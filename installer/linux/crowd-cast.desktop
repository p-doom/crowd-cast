[Desktop Entry]
Version=1.0
Type=Application
Name=crowd-cast
GenericName=Screen and Input Capture
Comment=Paired screencast and input capture agent for dataset collection
Exec=crowd-cast-agent
Icon=crowd-cast
Terminal=false
Categories=Utility;AudioVideo;Recorder;
Keywords=screen;record;capture;input;keyboard;mouse;
StartupNotify=true
StartupWMClass=crowd-cast-agent

# Additional metadata
X-GNOME-Autostart-enabled=false
X-KDE-autostart-after=panel

# Actions
Actions=setup;

[Desktop Action setup]
Name=Run Setup Wizard
Exec=crowd-cast-agent --setup
